{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "DOM",
            "ESNext",
        ],
        "module": "ES2015",
        "moduleResolution": "Node",
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "outDir": "dist/front",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "src/front/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}